extends ../../layouts/default
block content


    h1 Furnizori

    .units-row

        if (pages > 0)
            .pagination.unit-50
                ul
                    != createPagination(pages, page,perpage)
        .pageNum.unit-25 #
            input.howmany(name='perpage',placeholder='page',value=perpage)
        a.unit-25.btn.btn-big.right.clearfix(href='/admin/providers/new') Adauga furnizor


    table.providerList
        thead
            tr
                th.width-10
                th.width-80
                th.width-10

        tbody
            each category, i in providers
                tr
                    td.category-name #{i}
                each provider , j in category
                    tr
                        td
                            input(type='checkbox',name=provider._id,id=provider._id)
                        td
                            a(href='/admin/providers/update/'+provider._id) #{provider.name}
                        td

                            .onoffswitch
                                input.onoffswitch-checkbox(id='onoff#{provider.id}',disabled,type='checkbox', name='isactive', checked=provider.isActive)
                                label.onoffswitch-label(for='onoff#{provider.id}')
                                    span.onoffswitch-inner
                                    span.onoffswitch-switch

                //p=provider.isActive